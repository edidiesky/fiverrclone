{
  "version": 2,
  "buildCommand": "cd frontend && npm i --legacy-peer-deps && ./node_modules/vite/bin/vite.js build",
  "outputDirectory":"frontend/dist",
  "framework":"vite",
   "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/backend/server.js"
    }
  ],
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ]
}
